{
  "name": "terminal7",
  "version": "0.19.3",
  "description": "A touchable terminal emulator & multiplexer tablet app",
  "main": "src/index.js",
  "homepage": "https://terminal7.dev",
  "private": false,
  "build": {
    "appId": "dev.terminal7",
    "files": [
      "index.html",
      "css/*"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "dependencies": {
    "@capacitor/android": "^3.2.5",
    "@capacitor/app": "^1.0.5",
    "@capacitor/cli": "<4",
    "@capacitor/clipboard": "^1.0.5",
    "@capacitor/core": "<4",
    "@capacitor/device": "^1.0.5",
    "@capacitor/ios": "<4",
    "@capacitor/network": "^1.0.5",
    "@capacitor/storage": "^1.2.2",
    "@iarna/toml": "git+https://github.com/tuzig/iarna-toml.git",
    "@robingenz/capacitor-background-task": "^1.0.0",
    "codemirror": "git+https://github.com/tuzig/CodeMirror.git",
    "glob": "<8",
    "hammerjs": "<3",
    "idb": "<7",
    "uuid": "^8.3.2",
    "xterm": "git+https://github.com/tuzig/xterm.js.git#semver:<5.0",
    "xterm-addon-fit": "^0.3.0",
    "xterm-addon-search": "^0.7.0",
    "xterm-webfont": "^2.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "<6",
    "@typescript-eslint/parser": "<6",
    "eslint": "<9",
    "eslint-plugin-mocha": "^10.0.3",
    "jsdom": "^19.0.0",
    "typescript": "<5",
    "vite": "^2.8.5",
    "vite-plugin-pwa": "^0.11.13",
    "vitest": "^0.5.9",
    "yarn": "^1.22.17"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "stage": "vite build --sourcemap && vite preview",
    "run": "npm run build && cap run ios",
    "test": "vitest",
    "build": "vite build --sourcemap",
    "clean": "rm -rf dist ios/App/App/public/*",
    "postinstall": "cd ./node_modules/xterm && yarn install && npm run package",
    "qa": "bash ./qa/qa.bash",
    "lint": "npx eslint qa src --ext .js,.jsx,.ts,.tsx" 
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tuzig/terminal7.git"
  },
  "keywords": [
    "terminal",
    "tmux",
    "webrtc"
  ],
  "author": "Benny Daon",
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/tuzig/terminal7/issues"
  },
  "mocha": {
    "watch-files": [
      "src/*.js",
      "test/*.js"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin",
      "mocha"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:mocha/recommended"
    ],
    "env": {
      "mocha": true,
      "browser": true
    }
  }
}
